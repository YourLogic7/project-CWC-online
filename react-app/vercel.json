{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/index.js" },
    { "source": "/(.*)", "destination": "/dist/index.html" }
  ],
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "outputDirectory": "dist" } }
  ]
}